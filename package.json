{
	"name": "raicore-wallet",
	"version": "1.0.0",
	"description": "An Electron and dotnet core based wallet for easy, cross-platform, graphical use of raicore libraries",
	"main": "index.js",
	"dependencies": {
		"jquery": "^3.2.1",
		"normalize-css": "^2.3.1"
	},
	"devDependencies": {
		"copyfiles": "^1.2.0"
	},
	"scripts": {
		"add-splash-win":
			"copyfiles -u 3 ./wwwroot/js/electron/**/*.js ./bin/desktop/ElectronNET.Host-win32-x64/resources/app",
		"add-splash-osx":
			"copyfiles -u 3 ./wwwroot/js/electron/**/*.js ./bin/desktop/ElectronNET.Host-darwin-x64/ElectronNET.Host.app/Contents/Resources/app",
		"add-splash-linux":
			"copyfiles -u 3 ./wwwroot/js/electron/**/*.js ./bin/desktop/ElectronNET.Host-linux-x64/resources/app"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raicore/raicore-wallet.git"
	},
	"author": "Michael Schuld",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/raicore/raicore-wallet/issues"
	},
	"homepage": "https://github.com/raicore/raicore-wallet#readme"
}